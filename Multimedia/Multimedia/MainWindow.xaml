<Window x:Class="Multimedia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Multimedia"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Button Click="ButtonPlay_OnClick">Play Audio</Button>
        <Button Click="ButtonSetVideo_OnClick" Grid.Row="1" Grid.Column="1">Play Video</Button>
        <MediaElement x:Name="mediaElement" Grid.Row="2" Grid.ColumnSpan="2"></MediaElement>
    </Grid>
</Window>
